<UserControl x:Class="TRIBOLOGY.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}" Margin="0">
        <mui:ModernTab Layout="List" SelectedSource="/Pages/Settings/SetParam.xaml">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="串口及转速设置" Source="/Pages/Settings/SetParam.xaml" />
                <mui:Link DisplayName="系统设置" Source="/Pages/Settings/SystemSet.xaml" />
                <mui:Link DisplayName="主题" Source="/Pages/Settings/Appearance.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
